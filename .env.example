# Example Environment Variables
# Copy this file to .env and update with your values
# NEVER commit the .env file to Git!

# Supabase PostgreSQL Connection
# Replace YOUR-PROJECT-REF with your Supabase project reference
# Replace YOUR_PASSWORD with your database password

# Direct connection (recommended for development)
CONNECTIONSTRINGS__DEFAULTCONNECTION=Host=db.YOUR-PROJECT-REF.supabase.co;Port=5432;Database=postgres;Username=postgres.YOUR-PROJECT-REF;Password=YOUR_PASSWORD;SSL Mode=Require;Trust Server Certificate=true

# Pooler connection (recommended for production)
# CONNECTIONSTRINGS__DEFAULTCONNECTION=Host=YOUR-PROJECT-REF.pooler.supabase.com;Port=6543;Database=postgres;Username=postgres.YOUR-PROJECT-REF;Password=YOUR_PASSWORD;SSL Mode=Require

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=https://localhost:7000;http://localhost:5000

# Admin User Seed (created automatically on first run if not exists)
ADMIN__NAME=Administrador
ADMIN__EMAIL=admin
ADMIN__PASSWORD=mudar123

